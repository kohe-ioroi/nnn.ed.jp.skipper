{

  "manifest_version": 2,
  "name": "NNN-Skipper",
  "version": "1.5",

  "description": "快適なレポート環境を提供します。",

  "icons": {
    "255": "static/border-48.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.nnn.ed.nico/courses/*/chapters/*"],
      "js": ["body.js"]
    }
  ],
"browser_action": {
    "default_icon": "static/border-48.png",
    "default_title": "NNN_Skipper",
    "default_popup": "options/options.html",
    "browser_style": true
  }
}
